<table id="screen" class="save_table" >
	<% 6.times do |i|%>
		<tr>
			<% if i == $game.save_val * 2 -1 %>
				<td class= "save_on" >LOAD <%= i / 2 + 1%></td>
			<% elsif i%2==0 %>
				<td class= "blank" ></td>
			<% else %>
				<td class= "save_off" >LOAD <%= i / 2 + 1%></td>
			<%end%>
		</tr>
	<% end %>
</table>
